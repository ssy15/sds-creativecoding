#install markovify and weasyprint


!pip install markovify
!pip install weasyprint

import markovify
from weasyprint import HTML
novel = ''
with open("christmas.txt") as f:
    text = f.read()

text_model = markovify.Text(text)

for i in range(50000):
    novel += str(text_model.make_sentence()) + "<br>\n"

# word_count = len(novel.split(" "))
# print("Word count:" + str(word_count))


html_template = f"""
<html>
  <head>
  <title>Christmas time!!</title>
  <style>
    body {{
      font-family: Times New Roman;
    }}
  </style>
  </head>
  <body><div>
  {novel}</div>
  </body>
</html>
"""

# Finally, this line saves that template as a PDF using the HTML module of WeasyPrint
HTML(string=html_template).write_pdf("christmas_novel.pdf")
